{% extends "container.twig" %}

{% block content %}

<div class="card mb-3">
  <div class="row g-0">
    <div class="col-md-3">
      <img src="/img/{{ listing.companyImage }}" class="img-fluid rounded-start" alt="{{ listing.company }} logo">
    </div>
    <div class="col-md-9">
      <div class="card-body">
        <h4 class="card-title">{{ listing.jobTitle }}</h4>
        <ul class="list-group list-group-flush">
            <li class="list-group-item"><strong>Company: </strong>{{ listing.company }}</li>
            <li class="list-group-item"><strong>Location: </strong>{{ listing.location }}</li>
            <li class="list-group-item"><strong>Salary Indication: </strong>{{ listing.wageIndication }}</li>
        </ul>
        <hr style="margin-top: 0">
        <div class="card-text">
            <h5>Description</h5>
            {{ listing.description | raw }}
        </div>
        <hr style="margin-top: 0">
        <div class="card-text">
            <h5>Requirements</h5>
            {{ listing.requirements | raw }}
        </div>
        <hr style="margin-top: 0">
        <div class="d-grid gap-2 col-4 d-md-flex">
            <form name="applyForm" method="POST" action="/action/apply">
              <input type="hidden" name="listingId" value="{{ listing.id }}">
              <button class="btn btn-success btn-lg" type="submit">Apply</button>
            </form>
        </div>
        
        <p class="card-text"><small class="text-body-secondary">Posted on {{ listing.postDate }}</small></p>
      </div>
    </div>
  </div>
</div>

{% endblock %}