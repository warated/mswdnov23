{% extends "container.twig" %}

{% block content %}

<div class="card mb-3">
  <div class="row g-0">
      <div class="card-body">
        <ul class="list-group list-group-flush">
            <li class="list-group-item"><strong>Email: </strong>{{ account.email }}</li>
            <li class="list-group-item"><strong>Access Level: </strong>{{ account.accessLevel }}</li>
            <li class="list-group-item"><strong>Applications: </strong>{{ account.applications }}</li>
        </ul>
        <div class="d-grid gap-2 col-4 d-md-flex">
            <a href="/action/logout" class="btn btn-primary btn-lg" role="button">Logout</a>
        </div>
      </div>
  </div>
</div>

{% endblock %}